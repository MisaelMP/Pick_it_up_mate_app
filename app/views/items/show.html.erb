<h1><%= @item.title %></h1>
<%= image_tag @item.image, :alt => @item.title %>
<ul>
  <li>Title:
    <%= @item.title %>
  </li>
  <% if @item.user.present? %>
  <li>
    User:  <%= link_to @item.user.name, @item.user %>
    </li>
    <% end %>
  <li>
    Location:
    <%= @item.location %></li>
  <li>Condition:
    <%= @item.condition %></li>
</ul>
<div class="controls">
<%= button_to "Edit Item", edit_item_path(@item), :method => 'get' %>
<%= button_to "Delete item", item_path(@item), :method => 'delete', :data => {:confirm => 'Are you sure?'} %>
</div>
