<div class="form-bg">
  <div class="container ">
    <div class="row d-flex justify-content-center">
      <div class="col-md-6">
        <%= form_for(@user, html:{ class:'form-horizontal'}) do |f| %>
        <span class="heading">please Sign up</span>
        <div class="form-group">
          <%= f.label :email, :class => "control-label" %>
          <%= f.email_field :email, :class => "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :password, :class => "control-label" %>
          <%= f.password_field :password, :class => "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :confirmation, :class => "control-label" %>
          <%= f.password_field :password_confirmation, :class => "form-control" %>
        </div>
        <div class="form-group d-inline-flex flex-column">
          <%= f.submit "Sign up!", :class => 'btn btn-info' %>
            <br>
          <div class="form-group d-inline-flex flex-row">Already an account?
            <%= link_to 'Log in', login_path, :class => 'signup' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>
