<% if @current_user.present? %>
  <h1>Welcome back <%= @current_user.name %></h1>
  <% if @current_user.image? %>
    <%= image_tag @current_user.image, :class => 'rounded mx-auto d-block mx-auto w-25 p-3'%>
  <% else %>
    <%= image_tag 'https://www.goaltos.com/wp-content/uploads/sites/4559/2018/01/avatar-1577909_960_720.png', :class => 'rounded mx-auto d-block mx-auto w-25 p-3' %>
  <% end %>
  <div class="btn-toolbar justify-content-center">
  <%= button_to "Edit Profile", edit_user_path(@current_user), :class => 'btn btn-primary mr-2 ', :method => 'get' %>
  <%= button_to "Post item", new_item_path, :class => 'btn btn-primary', :method => 'get'%></div>
<% end %>
