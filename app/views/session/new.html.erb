 <% if flash[:error].present? %>
<h2><%= flash[:error] %></h2>
<% end %>
<div class="form-bg">
  <div class="container ">
    <div class="row d-flex justify-content-center">
      <div class="col-md-6">
        <%= form_tag login_path, :class => 'form-horizontal' do %>
        <span class="heading">please login</span>
        <div class="form-group">
          <%= label_tag :email, nil, :class => "control-label" %>
          <%= email_field_tag :email, nil, :class => "form-control" %>
        </div>
        <div class="form-group">
          <%= label_tag :password, nil, :class => "control-label" %>
          <%= password_field_tag :password, nil, :class => "form-control" %>
        </div>
        <div class="form-group">
          <%= submit_tag "Log in", :class => 'btn btn-info' %>
        </div>
        <div class="form-group">
          <%= link_to 'Sign up', new_user_path, :class => 'signup' %>
          <a href="#" class="forgot-pass">Forgot password?</a>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>
